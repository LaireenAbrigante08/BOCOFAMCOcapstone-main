        const nextPageBtn = document.getElementById('nextPage');
        
        paginationButtons.forEach(button => {
            button.addEventListener('click', function() {
                paginationButtons.forEach(btn => btn.classList.remove('active'));
                this.classList.add('active');
                
                // Update disabled state of prev/next buttons
                prevPageBtn.disabled = this.textContent.trim() === '1';
                nextPageBtn.disabled = this.textContent.trim() === '5';
                
                // Update pagination info
                const page = parseInt(this.textContent.trim());
                document.getElementById('startRange').textContent = (page - 1) * 10 + 1;
                document.getElementById('endRange').textContent = Math.min(page * 10, 100);
                
                // Here you would typically make an AJAX request to fetch the data for the selected page
                document.getElementById('loadingOverlay').style.display = 'flex';
                
                setTimeout(() => {
                    document.getElementById('loadingOverlay').style.display = 'none';
                }, 500);
            });
        });
        
        prevPageBtn.addEventListener('click', function() {
            const activePage = document.querySelector('.pagination-btn.active');
            const prevPage = activePage.previousElementSibling;
            if (prevPage && !prevPage.disabled) {
                prevPage.click();
            }
        });
        
        nextPageBtn.addEventListener('click', function() {
            const activePage = document.querySelector('.pagination-btn.active');
            const nextPage = activePage.nextElementSibling;
            if (nextPage && !nextPage.disabled) {
                nextPage.click();
            }
        });
