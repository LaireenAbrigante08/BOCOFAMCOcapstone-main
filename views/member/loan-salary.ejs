<%- include('../partials/membersidebar') %>
<style>
    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
    }
    
    body {
        font-family: 'Arial', sans-serif;
        background-color: #f5f7fa;
        color: #333;
        display: flex;
        justify-content: center;
        align-items: center;
        height: 110vh;
        padding-left: 250px; /* Adjust for sidebar */
    }
    
    .loan-container {
        background-color: #fff;
        padding: 30px;
        border-radius: 15px;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
        width: 150%;
        max-width: 1000px;
        margin-left: 20px;
    }
    
    .loan-container h2 {
        text-align: center;
        margin-bottom: 30px;
        color: #1d3557;
    }
    
    .form-grid {
        display: grid;
        grid-template-columns: repeat(2, 1fr);
        gap: 15px;
    }
    
    label {
        font-weight: bold;
    }
    
    input, select, textarea {
        width: 100%;
        padding: 9px;
        border: 1px solid #ccc;
        border-radius: 5px;
    }
    
    button {
        background-color: #457b9d;
        color: #fff;
        border: none;
        padding: 12px;
        border-radius: 8px;
        font-size: 18px;
        cursor: pointer;
        transition: background-color 0.3s;
        width: 100%;
    }
    
    button:hover {
        background-color: #1d3557;
    }
    
    @media (max-width: 768px) {
        .form-grid {
            grid-template-columns: 1fr;
        }
    }
    .notification {
        display: none;
        padding: 12px;
        border-radius: 5px;
        text-align: center;
        font-size: 16px;
        margin-bottom: 15px;
    }

    .notification.success {
        background-color: #d4edda;
        color: #155724;
        border: 1px solid #c3e6cb;
    }

    .notification.error {
        background-color: #f8d7da;
        color: #721c24;
        border: 1px solid #f5c6cb;
    }

    .printable-area {
        display: none;
        margin-top: 20px;
        padding: 20px;
        border: 1px solid #ccc;
        background-color: #fff;
    }
    
    /* Styles for the printed form */
    .print-header {
        text-align: center;
        margin-bottom: 20px;
        border-bottom: 1px solid #000;
        padding-bottom: 10px;
    }
    
    .print-header img {
        width: 60px;
        height: auto;
        margin-right: 10px;
    }
    
    .print-header h2 {
        font-size: 16px;
        margin: 5px 0;
        font-weight: bold;
    }
    
    .print-header p {
        font-size: 12px;
        margin: 2px 0;
    }
    
    .print-title {
        text-align: center;
        font-weight: bold;
        margin: 15px 0;
        font-size: 14px;
        text-decoration: underline;
    }
    
    .print-section {
        margin-bottom: 15px;
        clear: both;
    }
    
    .print-row {
        display: flex;
        justify-content: space-between;
        margin-bottom: 10px;
        clear: both;
    }
    
    .print-field {
        display: flex;
        align-items: flex-start;
        margin-bottom: 5px;
        position: relative;
    }
    
    .print-label {
        font-weight: bold;
        margin-right: 5px;
        font-size: 12px;
        min-width: fit-content;
    }
    
    .print-value {
        border-bottom: 1px solid #000;
        min-width: 200px;
        padding: 2px 5px;
        font-size: 12px;
        display: inline-block;
    }
    
    .checkbox-group {
        display: flex;
        flex-wrap: wrap;
        gap: 15px;
        margin-top: 5px;
        margin-bottom: 10px;
    }
    
    .checkbox-item {
        display: flex;
        align-items: center;
        font-size: 12px;
        white-space: nowrap;
        margin-right: 10px;
    }
    
    .checkbox {
        display: inline-block;
        width: 15px;
        height: 15px;
        border: 1px solid #000;
        margin-right: 5px;
        text-align: center;
    }
    
    .signature-line {
        border-top: 1px solid #000;
        width: 180px;
        text-align: center;
        padding-top: 5px;
        margin-top: 20px;
        font-size: 12px;
        display: inline-block;
    }
    
    .approval-section {
        margin-top: 20px;
        border-top: 1px solid #000;
        padding-top: 10px;
        clear: both;
    }
    
    .print-col-left {
        float: left;
        width: 48%;
    }
    
    .print-col-right {
        float: right;
        width: 48%;
    }
    
    .print-full-width {
        width: 100%;
        clear: both;
    }
    
    .print-signatures {
        display: flex;
        justify-content: space-between;
        margin-top: 20px;
        margin-bottom: 20px;
    }
    
    .print-signatures-center {
        display: flex;
        justify-content: center;
        margin-top: 20px;
        margin-bottom: 20px;
    }
    
    .print-committee {
        display: flex;
        justify-content: space-between;
        margin-top: 30px;
    }
    
    .print-instruction {
        font-style: italic;
        font-size: 10px;
        text-align: right;
        margin-bottom: 5px;
    }
    
    .print-applicant-header {
        text-align: center;
        font-weight: bold;
        margin: 15px 0;
        font-size: 14px;
    }
    
    .print-declaration {
        text-align: justify;
        font-size: 12px;
        margin: 15px 0;
    }
    
    .print-declaration ol {
        margin-left: 20px;
        margin-top: 10px;
        margin-bottom: 10px;
    }
    
    .print-declaration li {
        margin-bottom: 5px;
    }
    
    @media print {
        body * {
            visibility: hidden;
        }
        .printable-area, .printable-area * {
            visibility: visible;
        }
        .printable-area {
            position: absolute;
            left: 0;
            top: 0;
            width: 100%;
            padding: 20px;
        }
        
