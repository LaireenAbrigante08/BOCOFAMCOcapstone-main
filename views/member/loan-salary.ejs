    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Set today's date as default
            const today = new Date();
            const formattedDate = today.toISOString().substr(0, 10);
            document.getElementById('date').value = formattedDate;
            
            // Ensure only one checkbox is selected for loan type
            const loanTypeCheckboxes = document.querySelectorAll('input[name="loan_type"]');
            loanTypeCheckboxes.forEach(checkbox => {
                checkbox.addEventListener('change', function() {
                    if (this.checked) {
                        loanTypeCheckboxes.forEach(cb => {
                            if (cb !== this) cb.checked = false;
                        });
                    }
                });
            });
        });
        
        document.getElementById("loanForm").addEventListener("submit", function(event) {
            event.preventDefault();
            
            const formData = new FormData(this);
            const notification = document.getElementById("notification");
            
            fetch("/member/loan-salary", {
                method: "POST",
                body: formData
            })
            .then(response => response.json())
            .then(data => {
                notification.textContent = data.message;
                notification.className = data.success ? "notification success" : "notification error";
                notification.style.display = "block";
                
                setTimeout(() => { notification.style.display = "none"; }, 3000);
            })
            .catch(error => {
                console.error("Error:", error);
                notification.textContent = "An error occurred. Please try again.";
                notification.className = "notification error";
                notification.style.display = "block";
            });

            // Populate the printable area
            document.getElementById('printAppNo').textContent = document.getElementById('application_no').value;
            document.getElementById('printDate').textContent = document.getElementById('date').value;
            document.getElementById('printPosition').textContent = document.getElementById('position').value;
            document.getElementById('printLastName').textContent = document.getElementById('last_name').value;
            document.getElementById('printFirstName').textContent = document.getElementById('first_name').value;
            document.getElementById('printMI').textContent = document.getElementById('middle_initial').value;
            document.getElementById('printService').textContent = document.getElementById('length_of_service').value;
            document.getElementById('printAge').textContent = document.getElementById('age').value;
            document.getElementById('printAddress').textContent = document.getElementById('address').value;
            document.getElementById('printMunicipality').textContent = document.getElementById('municipality').value;
            document.getElementById('printOfficeAgency').textContent = document.getElementById('office_agency').value;
            document.getElementById('printSalary').textContent = document.getElementById('basic_monthly_salary').value;
            document.getElementById('printNetPay').textContent = document.getElementById('net_take_home_pay').value;
            document.getElementById('printSpouseName').textContent = document.getElementById('spouse_name').value;
            document.getElementById('printContactNo').textContent = document.getElementById('contact_no').value;
            
            // Full name for declaration
            const fullName = `${document.getElementById('first_name').value} ${document.getElementById('middle_initial').value} ${document.getElementById('last_name').value}`;
            document.getElementById('printFullName').textContent = fullName;
            document.getElementById('printResidence').textContent = document.getElementById('address').value;
            document.getElementById('printPositionDeclaration').textContent = document.getElementById('position').value;
            document.getElementById('printAgencyDeclaration').textContent = document.getElementById('office_agency').value;
            document.getElementById('printLoanAmount').textContent = document.getElementById('loan_amount').value;
            document.getElementById('printAmountApplied').textContent = document.getElementById('loan_amount').value;
            
            // Handle checkboxes for loan type
            if(document.getElementById('new_loan').checked) {
                document.getElementById('checkNew').innerHTML = '(✓)';
            }
            if(document.getElementById('salary_loan').checked) {
                document.getElementById('checkSalaryLoan').innerHTML = '(✓)';
            }
            if(document.getElementById('renewal').checked) {
                document.getElementById('checkRenewal').innerHTML = '(✓)';
            }

            // Show the print button
            document.getElementById('printButton').style.display = 'block';
            
            // Show the printable area for preview
            document.getElementById('printableArea').style.display = 'block';
        });

        function printForm() {
            window.print();
        }
    </script>
